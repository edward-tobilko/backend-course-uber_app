{
  "name": "uber-app",
  "version": "1.0.0",
  "description": "Express REST API backend course pet-project uber-app",
  "type": "commonjs",
  "engines": {
    "node": ">=20"
  },
  "license": "MIT",
  "author": "eduard.tobilko",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
